<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_creditcard_period_pivot" model="ir.ui.view">
        <field name="name">creditcard.period.pivot</field>
        <field name="model">creditcard.period</field>
        <field name="arch" type="xml">
            <pivot string="Kredi Kartı Dönemleri" sample="1">
                <field name="creditcard_id" type="row"/>
                <field name="limit" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_creditcard_period_graph" model="ir.ui.view">
        <field name="name">creditcard.period.graph</field>
        <field name="model">creditcard.period</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <graph string="Kredi Kartı Dönemleri" sample="1">
                <field name="creditcard_id"/>
                <field name="limit" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_creditcard_period_kanban" model="ir.ui.view">
        <field name="name">creditcard.period.kanban</field>
        <field name="model">creditcard.period</field>
        <field name="arch" type="xml">
            <kanban default_order="id asc">
                <field name="id"/>
                <field name="name"/>
                <field name="note"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        <field name="note"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_creditcard_period_tree" model="ir.ui.view">
        <field name="name">creditcard.period.tree</field>
        <field name="model">creditcard.period</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name"/>
                <field name="creditcard_id"/>
                <field name="period_begin"/>
                <field name="period_end"/>
                <field name="due_date"/>
                <field name="limit"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="view_creditcard_period_form" model="ir.ui.view">
        <field name="name">creditcard.period.form</field>
        <field name="model">creditcard.period</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="creditcard_id"/>
                            <field name="limit"/>
                        </group>
                        <group>
                            <field name="period_begin"/>
                            <field name="period_end"/>
                            <field name="due_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="note" widget="html" colspan="4"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_creditcard_period_search" model="ir.ui.view">
        <field name="name">creditcard.period.search</field>
        <field name="model">creditcard.period</field>
        <field name="arch" type="xml">
            <search string="Kredi Kartları">
                <field name="creditcard_id"/>
                <field name="name"/>
                <field name="note"/>
                <separator/>
            </search>
        </field>
    </record>

    <record id="action_creditcard_period" model="ir.actions.act_window">
        <field name="name">Kredi Kartı Dönemleri</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">creditcard.period</field>
        <field name="view_mode">tree,kanban,form,pivot,graph</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                İlk kredi kartı dönemini oluştur!
            </p>
        </field>
    </record>

    <menuitem id="menu_creditcard_period"
              name="Kredi Kartı Dönemleri"
              parent="menu_creditcard"
              action="action_creditcard_period"
              sequence="10"/>
</odoo>