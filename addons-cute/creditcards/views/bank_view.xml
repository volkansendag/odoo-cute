<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_creditcard_bank_kanban" model="ir.ui.view">
        <field name="name">creditcard.bank.kanban</field>
        <field name="model">creditcard.bank</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="id"/>
                <field name="title" />
                <field name="note"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        Adı: <field name="title" />
                                    </li>
                                    <li>
                                        Kart Sayısı: <field name="creditcard_count" />
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_creditcard_bank_tree" model="ir.ui.view">
        <field name="name">creditcard.bank.tree</field>
        <field name="model">creditcard.bank</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="title"/>
                <field name="note"/>
                <field name="creditcard_count"/>
            </tree>
        </field>
    </record>

    <record id="view_creditcard_bank_form" model="ir.ui.view">
        <field name="name">creditcard.bank.form</field>
        <field name="model">creditcard.bank</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="title"/>
                        <field name="note"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_creditcard_bank_search" model="ir.ui.view">
        <field name="name">creditcard.bank.search</field>
        <field name="model">creditcard.bank</field>
        <field name="arch" type="xml">
            <search string="Bankalar">
                <field name="title"/>
                <field name="note"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_creditcard_bank" model="ir.actions.act_window">
        <field name="name">Bankalar</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">creditcard.bank</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Hadi banka oluştur!
            </p>
        </field>
    </record>

    <menuitem id="menu_creditcard_bank"
              name="Bankalar"
              parent="menu_creditcard_settings_root"
              action="action_creditcard_bank"
              sequence="10"/>
</odoo>