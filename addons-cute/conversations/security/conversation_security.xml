<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_conversations" model="ir.module.category">
        <field name="name">Görüşme Kayıtları</field>
        <field name="description">Görüşme kayıtlarının takip edileceği modül.</field>
        <field name="sequence">12</field>
    </record>

    <record id="group_conversation_user" model="res.groups">
        <field name="name">Kullanıcı</field>
        <field name="category_id" ref="module_conversations"/>
    </record>

    <record id="group_conversation_sales" model="res.groups">
        <field name="name">Satış</field>
        <field name="category_id" ref="module_conversations"/>
        <field name="implied_ids" eval="[(4, ref('group_conversation_user'))]"/>
    </record>

     <record id="group_conversation_manager" model="res.groups">
        <field name="name">Yönetici</field>
        <field name="category_id" ref="module_conversations"/>
        <field name="implied_ids" eval="[(4, ref('group_conversation_sales'))]"/>
    </record>


    <record id="fleet_rule_conversation_visibility_user" model="ir.rule">
        <field name="name">Normal kullanıcı belsat dışındaki kayıtları görebilir</field>
        <field name="model_id" ref="model_conversation"/>
        <field name="groups" eval="[(4, ref('group_conversation_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="domain_force">[('source_name', '!=', 'belsat')]</field>
    </record>

    <record id="fleet_rule_conversation_visibility_sales" model="ir.rule">
        <field name="name">Satış kullanıcıları tüm görüşme kayıtlarını görebilir.</field>
        <field name="model_id" ref="model_conversation"/>
        <field name="groups" eval="[(4, ref('group_conversation_sales')),(4, ref('group_conversation_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="domain_force"></field>
    </record>

</odoo>
