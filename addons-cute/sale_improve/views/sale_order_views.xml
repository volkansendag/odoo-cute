<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.event.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='preview_sale_order']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="replace">
                <button name="action_cancel" type="object" string="İptal Et"
                        attrs="{'invisible': ['|', ('state', 'not in', ['draft', 'sent']), ('id', '=', False)]}"
                        data-hotkey="z"/>

                <button name="action_reject" type="object" string="Reddet"
                        attrs="{'invisible': ['|', ('state', 'not in', ['waiting']), ('id', '=', False)]}"
                        groups="sales_team.group_sale_manager"
                        data-hotkey="z"/>

                <button name="action_cancel" type="object" string="İptal Et *"
                        attrs="{'invisible': ['|', ('state', 'not in', ['sale']), ('id', '=', False)]}"
                        groups="sales_team.group_sale_manager"
                        data-hotkey="z"/>
            </xpath>
            <xpath expr="//button[@name='action_confirm'][1]" position="replace">
                <button name="action_waiting" type="object" string="Onaya Gönder"
                        attrs="{'invisible': ['|', ('state', 'not in', ['draft']), ('id', '=', False)]}"
                        data-hotkey="z"/>

                <button name="action_approved" data-hotkey="v"
                        string="Siparişi Onayla" class="btn-primary" type="object"
                        groups="sales_team.group_sale_manager"
                        attrs="{'invisible': [('state', 'not in', ['waiting'])]}"/>

                <button name="action_sent" id="action_confirm" data-hotkey="v"
                        string="Müşteriye Gönder" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', 'not in', ['approved'])]}"/>

                <button name="action_confirm" id="action_confirm" data-hotkey="v"
                        string="Müşteri Onayladı" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', 'not in', ['sent'])]}"/>

                <button name="action_done" id="action_confirm" data-hotkey="v"
                        string="Kilitle" type="object"
                        groups="sales_team.group_sale_manager"
                        attrs="{'invisible': [('state', 'not in', ['sale'])]}"/>
            </xpath>
            <xpath expr="//button[@name='action_confirm'][2]" position="replace"></xpath>
            <xpath expr="//button[@name='action_draft']" position="attributes">
                <attribute name="states">cancel,waiting,approved,reject</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">draft,waiting,approved,sent,sale</attribute>
            </xpath>
            <xpath expr="//button[@name='action_quotation_send'][1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_quotation_send'][4]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="before">
                <field name="is_order_line_readonly" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="attrs">{'readonly': [('is_order_line_readonly', '=', True)]}
                </attribute>
            </xpath>

            <xpath expr="//tree//field[@name='discount']" position="after">
                <field name="price_reduce_amount"/>
            </xpath>
        </field>
    </record>

    <record id="sale_view_inherit_opportunity" model="ir.ui.view">
        <field name="name">sale.order.form.inherit_opportunity.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_crm.sale_view_inherit123"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='opportunity_id']" position="attributes">
                <attribute name="groups">sales_team.group_sale_manager</attribute>
            </xpath>
        </field>
    </record>

</odoo>
